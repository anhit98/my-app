pipeline {
  agent {
    docker {
      image 'doanh98/my-app:0.1.0'
      args '--user root -v /var/run/docker.sock:/var/run/docker.sock' // mount Docker socket to access the host's Docker daemon
    }
  }
  stages {
    stage('Checkout') {
      steps {
        sh 'echo passed'
        //git branch: 'main', url: ''
      }
    }
    stage('Build and Test') {
      steps {
        sh 'ls -ltr'
        // build the project and run test
        sh 'cd my-app && npm install'
      }
    }
    stage('Static Code Analysis') {
      environment {
        SONAR_URL = "http://3.87.36.253:9000"
      }
      steps {
        withCredentials([string(credentialsId: 'sonarqube', variable: 'SONAR_AUTH_TOKEN')]) {
          sh 'cd my-app && mvn sonar:sonar -Dsonar.login=$SONAR_AUTH_TOKEN -Dsonar.host.url=${SONAR_URL}'
        }
      }
    }
    stage('Build and Push Docker Image') {
      environment {
        DOCKER_IMAGE = "my-app:${BUILD_NUMBER}"
        // DOCKERFILE_LOCATION = "my-app/Dockerfile"
        REGISTRY_CREDENTIALS = credentials('docker-cred')
      }
      steps {
        script {
            sh 'cd my-app && docker build -t ${DOCKER_IMAGE} .'
            def dockerImage = docker.image("${DOCKER_IMAGE}")
            docker.withRegistry('https://index.docker.io/v1/', "docker-cred") {
                dockerImage.push()
            }
        }
      }
    }
    stage('Update Deployment File') {
        environment {
            GIT_REPO_NAME = "my-app"
            GIT_USER_NAME = "anhit98"
        }
        steps {
            withCredentials([string(credentialsId: 'github', variable: 'GITHUB_TOKEN')]) {
                sh '''
                    git config user.email "anhngocdo13061998@gmail.com"
                    git config user.name "anhit98"
                    BUILD_NUMBER=${BUILD_NUMBER}
                    sed -i "s/v0.1.0/${BUILD_NUMBER}/g" my-app/deployment.yml
                    git add my-app/deployment.yml
                    git commit -m "Update deployment image to version ${BUILD_NUMBER}"
                    git push https://${GITHUB_TOKEN}@github.com/${GIT_USER_NAME}/${GIT_REPO_NAME} HEAD:main
                '''
            }
        }
    }
  }
}